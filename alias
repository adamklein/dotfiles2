alias v='vim'

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# some more aliases
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# -> Prevents accidentally clobbering files.
alias mkdir='mkdir -p'

# ls aliases
alias l='ls -lhG'
alias ls='ls -G'
alias ll='ls -AlFhG'
alias la='ls -AG'
alias lt='ls -AlFhtG'

alias du='du -kh'
alias df='df -kTh'

alias path='echo -e ${PATH//:/\\n}'
alias libpath='echo -e ${LD_LIBRARY_PATH}//:/\\n}'

alias which='type -a'

alias g="jump"
alias b="bookmark"
alias d="deletemark"
alias b="showmarks"

# grep colors
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# git

alias ga='git add'
alias gb='git branch'
alias gbr='git checkout -b'
alias gc='git checkout'
alias gcl='git clone'
alias gco=fbr
alias gcam='git commit -am'
alias gd='git diff --color'
alias gl='git log --oneline'
alias gp='git push'
alias gpb='git push --set-upstream origin $(git branch | grep \* | cut -d " " -f2)'
alias gpull='git pull --ff-only'
alias gra='git remote add'
alias grr='git remote rm'
alias grp='git remote prune'
alias gs='git status'


# delete all local branches that are already merged into the currently checked out branch
alias gclean='git branch --merged | egrep -v "(^\*|master|dev)" | xargs git branch -d'

# delete all untracked files
alias gdelete='gms | tail -n +5 | nocolor | awk "{ print $1 }" | xargs rm -rf'

